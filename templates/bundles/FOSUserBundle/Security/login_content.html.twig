{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    <img class="mb-4" width="150" src="{{ asset('images/logo.png') }}" alt="">

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" class="form-control" placeholder="{{ 'security.login.username'|trans }}" name="_username" value="{{ last_username }}" required="required" autocomplete="username" autofocus />

    <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" name="_password" required="required" autocomplete="current-password" />

    <div class="checkbox mb-3">
        <label for="remember_me">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
        </label>
    </div>
    <input type="submit" id="_submit" class="btn btn-lg btn-primary btn-block" name="_submit" value="{{ 'security.login.submit'|trans }}" />

    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
</form>
